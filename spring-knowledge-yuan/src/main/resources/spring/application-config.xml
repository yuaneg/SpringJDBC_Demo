<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    
	<bean id="propertyGetterListener" class="com.yuan.applicationcontext.event.PropertyGettedListener"/>
 
    <bean id="helloBean" class="com.yuan.applicationcontext.event.HelloBean" destroy-method="shutDown">
        <property name="helloWord"><value>Hello!Justin!</value></property>
    </bean>
    <context:component-scan base-package="com.yuan"></context:component-scan>
</beans>
